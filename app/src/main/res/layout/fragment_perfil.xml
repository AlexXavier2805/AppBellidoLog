<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.PerfilFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#1a1a1a">

    <androidx.legacy.widget.Space
        android:layout_width="410dp"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_titulo_fragment_foto"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/ivFotoPerfil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/iv_fotoalumna_fragment_foto" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/btnSeleccionar"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:backgroundTint="#403E3E"
            android:drawableLeft="@drawable/ic_baseline_image_search_24"
            android:paddingRight="5dp"
            android:text="@string/btn_seleccionar_fragment_foto" />

        <androidx.legacy.widget.Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnActualizarFoto"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:backgroundTint="#107E05"
            android:drawableLeft="@drawable/ic_baseline_check_24" />
    </LinearLayout>

</LinearLayout>